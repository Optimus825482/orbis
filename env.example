# =============================================================================
# Astro AI Predictor - Environment Configuration Template
# =============================================================================
# Bu dosyayı .env olarak kopyalayın ve değerlerinizi girin
# This file should be copied to .env and values should be filled in
# =============================================================================

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================
# Flask secret key - REQUIRED for session security
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Database URL (SQLite, MySQL, PostgreSQL supported)
# SQLite: sqlite:///instance/astro.db
# MySQL: mysql+pymysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///instance/astro.db

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
# Session type: 'redis' for production, 'filesystem' for development
SESSION_TYPE=filesystem
SESSION_LIFETIME_HOURS=1
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_NAME=astro_session

# =============================================================================
# REDIS CONFIGURATION (Required if SESSION_TYPE=redis)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# API KEYS - REQUIRED
# =============================================================================
# OpenCage API for location search
# Get free API key at: https://opencagedata.com/api
OPENCAGE_API_KEY=your-opencage-api-key-here

# =============================================================================
# AI API KEYS (Optional - for AI interpretations)
# =============================================================================
# Google Gemini API
# Get key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Hyperbolic API
# Get key at: https://hyperbolic.xyz/
HYPERBOLIC_API_KEY=

# OpenRouter API
# Get key at: https://openrouter.ai/
OPENROUTER_API_KEY=

# =============================================================================
# SUPABASE CONFIGURATION (Optional - for cloud features)
# =============================================================================
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=3600

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_INTERPRETATIONS=True
ENABLE_TTS=True
ENABLE_CACHE=True

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# In production:
# 1. Set FLASK_ENV=production
# 2. Set SESSION_TYPE=redis
# 3. Set SESSION_COOKIE_SECURE=True
# 4. Generate a strong SECRET_KEY
# 5. Use a strong REDIS_PASSWORD
# 6. Configure proper DATABASE_URL
# 7. Set DEBUG=False
# =============================================================================
